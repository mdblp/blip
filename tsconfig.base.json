{
  "compilerOptions": {
    "charset": "UTF-8",
    "module": "esnext",
    "target": "esnext",
    "jsx": "react",
    "diagnostics": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "newLine": "lf",
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "declaration": true,
    "composite": true,
    "noEmit": false,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "noErrorTruncation": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "noImplicitUseStrict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
  },
  "include": ["packages/"],
  "exclude": ["**/node_modules", "**/dist"]
}
