{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ES2015",
    "charset": "UTF-8",
    "sourceMap": true,
    "outDir": "./dist",
    "jsx": "react",
    "diagnostics": true,
    "declaration": true,
    "baseUrl": ".",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "newLine": "lf",
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "noErrorTruncation": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "noImplicitUseStrict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "types": []
  },
  "exclude": [
    "node_modules",
    "test/*",
    "__tests__/*"
  ],
  "include": [
    "./src/index.ts",
    "./src/**/*.ts",
  ]
}
