{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "charset": "UTF-8",
    "sourceMap": true,
    "outDir": "./dist",
    "jsx": "react",
    "diagnostics": true,
    "baseUrl": ".",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": false,
    "newLine": "lf",
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "noErrorTruncation": true,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": ["node_modules", "test"],
  "include": ["**/*"]
}
