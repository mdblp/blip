{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ES2015",
    "charset": "UTF-8",
    "sourceMap": true,
    "outDir": "./dist",
    "jsx": "react",
    "diagnostics": true,
    "baseUrl": ".",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "newLine": "lf",
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "noErrorTruncation": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "noImplicitUseStrict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": [
    "node_modules",
    "test/*"
  ],
  "include": [
    "./types/*.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
