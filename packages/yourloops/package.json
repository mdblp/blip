{
  "name": "yourloops",
  "version": "3.8.0-beta",
  "private": true,
  "description": "Blip is a web app for type 1 diabetes (T1D).",
  "repository": {
    "type": "git",
    "url": "https://github.com/mdblp/blip"
  },
  "author": {
    "name": "Diabeloop",
    "url": "https://www.diabeloop.com/"
  },
  "license": "BSD-2-Clause",
  "scripts": {
    "mrproper": "rm -rf node_modules dist",
    "clean": "rm -rf dist test/integration/coverage test/unit/coverage",
    "build": "npm run build-prod",
    "prebuild-prod": "npm run clean",
    "build-prod": "NODE_ENV=production webpack --mode=production",
    "prebuild-dev": "npm run clean",
    "build-dev": "NODE_ENV=development webpack --mode=development",
    "start-dev": "NODE_ENV=development NODE_OPTIONS='--max-old-space-size=4096' USE_WEBPACK_DEV_SERVER=true webpack serve --host ::",
    "test": "npm run unit-test && npm run integration-test",
    "unit-test": "jest --config=test/unit/jest.config.js",
    "integration-test": "jest --config=test/integration/jest.config.js",
    "integration-test-hcp": "jest --config=test/integration/jest.config.js --testMatch '<rootDir>/pages/**/*.hcp.spec.tsx'",
    "integration-test-caregiver": "jest --config=test/integration/jest.config.js --testMatch '<rootDir>/pages/**/*.caregiver.spec.tsx'",
    "integration-test-patient": "jest --config=test/integration/jest.config.js --testMatch '<rootDir>/pages/**/*.patient.spec.tsx'",
    "integration-test-common": "jest --config=test/integration/jest.config.js --testMatch '<rootDir>/pages/**/*' --testPathIgnorePatterns '\\.(hcp|caregiver|patient)\\.spec\\.tsx'",
    "lint": "eslint .",
    "lint-fix": "npm run lint -- --fix"
  },
  "dependencies": {
    "@auth0/auth0-react": "^2.2.1",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@fontsource/roboto": "^5.0.8",
    "@mui/icons-material": "^5.14.13",
    "@mui/lab": "^5.0.0-alpha.151",
    "@mui/material": "^5.14.16",
    "@mui/x-data-grid": "^6.18.2",
    "axios": "^1.7.4",
    "bows": "^1.7.2",
    "core-js": "^3.38.0",
    "dayjs": "^1.11.10",
    "emoji-picker-react": "^4.5.16",
    "html-react-parser": "^4.2.9",
    "i18next": "^23.7.8",
    "lodash": "^4.17.21",
    "lottie-react": "^2.4.0",
    "moment-timezone": "^0.5.43",
    "react": "18.2.0",
    "react-device-detect": "^2.2.3",
    "react-dom": "18.2.0",
    "react-draggable": "^4.5.0",
    "react-i18next": "^13.3.0",
    "react-idle-timer": "^5.7.2",
    "react-resize-detector": "^9.1.0",
    "react-router-dom": "^7.9.2",
    "tss-react": "^4.9.2",
    "uuid": "^10.0.0"
  }
}
